<% unless user == current_user %>
  <% if current_user.following?(user) %>
    <% friendship = current_user.active_friendships.find_by(followed: user) %>
    <%= button_to t('.destroy'), user_friendship_path(user, friendship), method: :delete %>
  <% else %>
    <%= button_to t('.create'), user_friendships_path(user), method: :post %>
  <% end %>
<% end %>
