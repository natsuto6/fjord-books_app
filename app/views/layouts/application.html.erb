<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p id="notice"><%= notice %></p>
    <p id="alert"><%= alert %></p>

    <p class="navbar-text pull-right">
      <% if user_signed_in? %>
        <strong><%= t('layouts.application.sign_in_as', email: current_user.email) %></strong>
        <%= link_to t('devise.registrations.edit.profile'), edit_user_registration_path, class: 'navbar-link' %> |
        <%= link_to t('devise.sessions.sign_out'), destroy_user_session_path, method: :delete, class: 'navbar-link' %>
      <% else %>
        <%= link_to t('devise.registrations.new.sign_up'), new_user_registration_path, class: 'navbar-link' %> |
        <%= link_to t('devise.sessions.new.sign_in'), new_user_session_path, class: 'navbar-link' %>
      <% end %>
    </p>
    <%= yield %>
  </body>
</html>
